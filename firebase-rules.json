{
  "rules": {
    "rooms": {
      "$roomId": {
        ".read": true,
        ".write": true,
        ".indexOn": ["createdAt"]
      }
    },
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid",
        "displayName": {
          ".validate": "newData.isString()"
        },
        "coins": {
          ".validate": "newData.isNumber() && newData.val() >= 0"
        },
        "gamesPlayed": {
          ".validate": "newData.isNumber() && newData.val() >= 0"
        },
        "gamesWon": {
          ".validate": "newData.isNumber() && newData.val() >= 0"
        }
      }
    }
  }
}

